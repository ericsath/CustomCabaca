                    android:id="@+id/textView50"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text=":"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/judul"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="65"
